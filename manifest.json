{
    "manifest_version": 3,
    "name": "VibeMonkey",
    "version": "1.0",
    "description": "Your AI companion for generating userscripts.",
    "permissions": [
        "sidePanel",
        "storage",
        "activeTab",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_page": "options.html",
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "VibeMonkey"
    },
    "background": {
        "service_worker": "dist/background.bundle.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content-script.bundle.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}